@model ProductViewModel

@{
    System.Threading.Thread.CurrentThread.CurrentCulture = new System.Globalization.CultureInfo("pt-BR"); 
    System.Threading.Thread.CurrentThread.CurrentUICulture = new System.Globalization.CultureInfo("pt-BR");
}

<h3>Novo Produto</h3>

<div class="row">
    <form id="form-product" method="POST" asp-action="Edit">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control"/>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Categories" class="select-label"></label>
            <select asp-for="Categories" name="IdsCategories[]" class="form-select" id="multiple-select-field" data-placeholder="Escolha a categoria" multiple>
                @foreach (var item in Model.Categories)
                {
                    @if (item.Selected)
                    {
                        <option value="@item.Id" selected>@item.Name</option>
                    }
                    else
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                }
            </select>
            
        </div>
        <br />
        <div class="form-group">
            <input id="submit-product" type="submit" value="Editar" class="btn btn-primary" />
            <a class="btn btn-info" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>


<script>
    $('#multiple-select-field').select2({
        theme: "bootstrap-5",
        width: $(this).data('width') ? $(this).data('width') : $(this).hasClass('w-100') ? '100%' : 'style',
        placeholder: $(this).data('placeholder'),
        closeOnSelect: false,
    });
</script>